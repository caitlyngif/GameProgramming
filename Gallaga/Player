using UnityEngine;
namespace Gallagga
{
    public class Player : MonoBehaviour
    {
        [SerializeField] GameObject bulletPrefab;
        [SerializeField] Transform gun;     // Empty GameObject child of player for bullet spawn

        // Called when Spacebar is pressed
        public void OnShoot()
        {
            Debug.Log("Shoot!");
            Instantiate(bulletPrefab, gun.position, gun.rotation);
        }
    }
}