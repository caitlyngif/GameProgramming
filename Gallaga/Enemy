using UnityEngine;
namespace Gallagga
{
    public class Enemy : MonoBehaviour
    {
        private void OnTriggerEnter(Collider other)
        {
            var bullet = other.gameObject.GetComponent<Bullet>();
            if (bullet != null)
            {
                bullet.Increment();
                Destroy(gameObject);
                Destroy(bullet.gameObject);
            }
        } 
    }
}