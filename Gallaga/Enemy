using UnityEngine;
namespace Gallagga
{
    public class Enemy : MonoBehaviour
    {
        private void OnTriggerEnter(Collider other)
        {
            // Debug.Log("Enemy collided with " + other.name);
            var bullet = other.gameObject.GetComponent<Bullet>();
            if (bullet != null)
            {
                bullet.Increment();
                Destroy(gameObject);
            }
        }
    }
}

