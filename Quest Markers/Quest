/*

*/
using UnityEngine;
using System.Collections.Generic;
using System.Linq;

public class Quest //not derived from monobehaviour, not attached to object
{
    public string title;
    public List<QuestReq> reqs = new();

    public Quest(string title){
        this.title = title;
    }

    public void Add(QuestReq req) => reqs.Add(req);

    publiic QuestReq Get(int index) => reqs(index);

    public List<QuestReq> GetAll() => reqs.ToList();
}
