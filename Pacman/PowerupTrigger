// add to player

using UnityEngine;
using UnityEngine.UI;
public class PowerupTrigger : MonoBehaviour
{
    [SerializeField] GameObject loseScreen;
    [SerializeField] Image image;
    float powerTimer;
    [SerializeField] float maxPowerTime;
    bool _poweredUp;

    bool poweredUp
    {
        get => _poweredUp;
        set
        {
            if (_poweredUp)
            {
                powerTimer = maxPowerTime;
                // _poweredUp = value;
            }
            else
            {
                // _poweredUp = false;
                image.fillAmount = 0;
            }
        }
    }

    private void OnTriggerEnter(Collider other)
    {
        var powerUpObject = other.GetComponent<Powerup>();
        if (powerUpObject)
        {
            poweredUp = true;
            Destroy(powerUpObject.gameObject); // destroy power up
            return;
        }

        var ghost = other.GetComponent<EnemyComp>();
        if (ghost)
        {
            HandleGhost(ghost);
        }
    }

    private void HandleGhost(EnemyComp ghost)
    {
        if (poweredUp)
        {
            Destroy(ghost.gameObject);
        }
        else
        {
            loseScreen.SetActive(true);
        }
    }

    private void Update()
    {
        if (poweredUp && powerTimer > 0)
        {
            powerTimer -= Time.deltaTime;
            image.fillAmount = powerTimer / maxPowerTime;
        }
        else
        {
            if (poweredUp && powerTimer <= 0)
            {
                poweredUp = false;
                // image.fillAmount = 0;
            }
        }
    }
}