using UnityEngine;
using Exercises;

// similar to coin pickup
// attached to coin

public class HealthPickup : MonoBehavior
{
    private void OnTriggerEnter(Collider other)
    {
        var player = other.GetComponent<HealthDecay>();
        if (player)
        {
            player.Increment();
            Destroy(gameObject);
        }
    }
}
