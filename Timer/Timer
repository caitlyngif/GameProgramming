using UnityEngine;
public class Timer : MonoBehaviour
{
    [SerializeField] TMPro.TextMeshProUGUI minutesText, secondsText;
    float current;
    string convert(int amount)
    {
        if (amount < 10)
        {
            return $"0{amount}";
        }
        return amount.ToString();
    }

    private void Update()
    {
        // Debug.Log(Time.deltaTime); // how many seconds since last frame
        // Debug.Log(Time.time); // how many seconds since game started

        current += Time.deltaTime;
        // without int, the timer is too accurate to 5 decimal points
        secondsText.text = convert((int)current % 60); //show 0-59, not 60. restarts seconds to 0
        minutesText.text = convert((int)current / 60);
    }

    //add component to button, click onclick
    //runtime only, drag panel as object and timerscript(use reset() function)
    public void Reset() //called when you press the button to reset the timer
    {
        current = 0;
    }
}